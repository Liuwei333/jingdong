<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    xmlns:fresco="http://schemas.android.com/apk/res-auto"
    android:layout_height="match_parent">
    <!--登录部分-->
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/wd_login_height"
        android:id="@+id/wd_login"
        android:background="@drawable/reg_bg"
        >
        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="@dimen/wd_login_height"
            android:gravity="center"
            >

            <com.facebook.drawee.view.SimpleDraweeView
                android:layout_width="@dimen/wd_height"
                android:layout_height="@dimen/wd_height"
                android:id="@+id/tou"
                fresco:roundAsCircle="true"
                android:layout_marginLeft="20dp"
                fresco:roundingBorderWidth="1dp"
                android:background="@drawable/user"/>

            <TextView
                android:layout_marginLeft="@dimen/shifting_height_bottom_padding_active"
                android:layout_marginBottom="@dimen/shifting_height_bottom_padding_active"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="登录/注册>"
                android:id="@+id/name"
                android:textSize="15sp"/>
        </LinearLayout>


        <LinearLayout
            android:layout_alignParentRight="true"
            android:layout_width="wrap_content"
            android:gravity="center"
            android:layout_height="@dimen/wd_login_height">
            <ImageView

                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:layout_marginBottom="30dp"
                android:layout_marginRight="@dimen/shifting_height_bottom_padding_active"
                android:background="@drawable/my_set_hei"/>

            <ImageView
                android:layout_marginBottom="30dp"
                android:layout_marginRight="@dimen/shifting_height_bottom_padding_active"
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:background="@drawable/msg_hei"/>

        </LinearLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/wd_cen"
        android:layout_width="match_parent"
        android:layout_below="@+id/wd_login"
        android:layout_height="wrap_content">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_marginTop="@dimen/shifting_height_bottom_padding_active"
            android:id="@+id/wd_pay"
            android:layout_height="wrap_content">
            <!--待付款-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/dfk"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/btn_setting"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/fukuamn"/>
            </LinearLayout>
            <!--待收货-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/dsh"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/shouhuo"/>
            </LinearLayout>
            <!--待评价-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/dpj"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/pingjia"/>
            </LinearLayout>
            <!--退换/售后-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/th_sh"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/tuihuan"/>
            </LinearLayout>
            <!--我的订单-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"

                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="21dp"
                    android:src="@drawable/mydd" />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:id="@+id/ding"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/dingdan"/>
            </LinearLayout>

        </LinearLayout>

        <View
            android:id="@+id/wd_divider"
            android:layout_below="@+id/wd_pay"
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:background="#000"
            android:layout_height="0.5dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_below="@+id/wd_divider"
            android:layout_marginTop="@dimen/shifting_height_bottom_padding_active"
            android:layout_height="wrap_content">
            <!--京豆-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/wd_03"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/jingdou"/>
            </LinearLayout>
            <!--优惠券-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/wd_05"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/youhuiquan"/>
            </LinearLayout>
            <!--白条-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/wd_07"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/baitiao"/>
            </LinearLayout>
            <!--礼品卡-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/wd_09"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/lipinka"/>
            </LinearLayout>
            <!--我的钱包-->
            <LinearLayout
                android:layout_width="0dp"
                android:layout_weight="1"
                android:layout_height="@dimen/wd_height"
                android:layout_gravity="center"
                android:gravity="center"
                android:orientation="vertical">

                <ImageView
                    android:layout_width="@dimen/wd_pic_height"
                    android:layout_height="@dimen/wd_pic_height"
                    android:src="@drawable/myqb"
                    />
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textSize="12sp"
                    android:layout_marginTop="@dimen/wd_marginTop"
                    android:text="@string/qianbao"/>
            </LinearLayout>
        </LinearLayout>

    </RelativeLayout>

    <View
        android:id="@+id/wd_view"
        android:layout_width="match_parent"
        android:layout_height="10dp"
        android:layout_below="@+id/wd_cen"
        android:layout_marginTop="10dp"
        android:background="#99c0c0c0"/>

    <!--商品关注层-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wd_view"
        android:id="@+id/wd_good"
        >
        <!--商品关注-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/spgz"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/shangping"/>
        </LinearLayout>
        <!--店铺关注-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/dp"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/dianpu"/>
        </LinearLayout>
        <!--内容收藏-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/gz"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/neirong"/>
        </LinearLayout>
        <!--浏览记录-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/lljl"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/liulan"/>
        </LinearLayout>
    </LinearLayout>
    <!--我的活动层-->
    <LinearLayout
        android:layout_marginTop="10dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/wd_good"
        android:id="@+id/wd_act"
        >
        <!--我的活动-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/hd"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/huodong"/>
        </LinearLayout>
        <!--社区-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/shqz"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/shequ"/>
        </LinearLayout>
        <!--客户服务-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:id="@+id/li2"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                android:src="@drawable/kh"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                android:text="@string/kehu"/>
        </LinearLayout>
        <!--占位-->
        <LinearLayout
            android:layout_width="0dp"
            android:layout_weight="1"
            android:layout_height="@dimen/wd_height"
            android:layout_gravity="center"
            android:gravity="center"
            android:orientation="vertical">

            <ImageView
                android:layout_width="@dimen/wd_pic_height"
                android:layout_height="@dimen/wd_pic_height"
                />
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textSize="12sp"
                android:layout_marginTop="@dimen/wd_marginTop"
                />
        </LinearLayout>

    </LinearLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:id="@+id/view"
        android:layout_below="@+id/wd_act"
        android:background="@drawable/weini"
        />
    <android.support.v7.widget.RecyclerView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/view"
        android:id="@+id/rcy"
        ></android.support.v7.widget.RecyclerView>


</RelativeLayout>
